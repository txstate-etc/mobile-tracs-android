<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.txstate.mobile.tracs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="edu.txstate.mobile.tracs.AnalyticsApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="edu.txstate.mobile.tracs.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="https" />
                <data android:host="tracs.mobile.txstate.edu" />
            </intent-filter>
        </activity>

        <activity
            android:name="edu.txstate.mobile.tracs.NotificationsActivity"
            android:label="@string/notifications_label"
            android:parentActivityName="edu.txstate.mobile.tracs.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.txstate.mobile.tracs.MainActivity" />
        </activity>
        <activity android:name="edu.txstate.mobile.tracs.NotificationSettingsActivity"
            android:label="@string/settings_label"
            android:parentActivityName="edu.txstate.mobile.tracs.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.txstate.mobile.tracs.MainActivity" />
        </activity>
        <activity android:name=".FeedbackActivity"
            android:label="@string/feedback_label"
            android:parentActivityName="edu.txstate.mobile.tracs.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.txstate.mobile.tracs.MainActivity" />
        </activity>
        <activity android:name=".ContactActivity"
            android:label="@string/menu_contact_us"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.txstate.mobile.tracs.MainActivity" />
        </activity>


        <service android:name="edu.txstate.mobile.tracs.notifications.NotificationIdService" />
        <service
            android:name="edu.txstate.mobile.tracs.services.NotificationService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".services.FirebaseService" />
    </application>

</manifest>